<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.weather.WeatherFragment">

   <com.toptoche.searchablespinnerlibrary.SearchableSpinner
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/select_city"/>

   <TextView
       android:id="@+id/titleTempMin"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:gravity="center_horizontal"
       android:text="Temperatura Mínima"
       android:textAlignment="center"
       android:textColor="#2541A5"
       android:textSize="18sp"
       android:textStyle="bold"
       android:visibility="invisible" />

   <TextView
       android:id="@+id/txtTempMin"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:gravity="center_horizontal"
       android:text=""
       android:textAlignment="center"
       android:textColor="#2541A5"
       android:textSize="18sp"
       android:textStyle="bold"
       android:visibility="invisible" />

   <TextView
       android:id="@+id/titleTempMax"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:gravity="center_horizontal"
       android:text="Temperatura Máxima"
       android:textAlignment="center"
       android:textColor="#A3052A"
       android:textSize="18sp"
       android:textStyle="bold"
       android:visibility="invisible" />

   <TextView
       android:id="@+id/textTempMax"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:gravity="center_horizontal"
       android:text=""
       android:textAlignment="center"
       android:textColor="#A3052A"
       android:textSize="18sp"
       android:textStyle="bold"
       android:visibility="invisible" />

   <TextView
       android:id="@+id/titleHumedad"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:gravity="center_horizontal"
       android:text="Humedad"
       android:textAlignment="center"
       android:textColor="#673AB7"
       android:textSize="18sp"
       android:textStyle="bold"
       android:visibility="invisible" />

   <TextView
       android:id="@+id/txtHumedad"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:gravity="center_horizontal"
       android:text=""
       android:textAlignment="center"
       android:textColor="#673AB7"
       android:textSize="18sp"
       android:textStyle="bold"
       android:visibility="invisible" />

   <TextView
       android:id="@+id/titleSensacionTermica"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:gravity="center_horizontal"
       android:text="Sensación Térmica"
       android:textAlignment="center"
       android:textColor="#B17010"
       android:textSize="18sp"
       android:textStyle="bold"
       android:visibility="invisible" />

   <TextView
       android:id="@+id/txtSensacionTermica"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:gravity="center_horizontal"
       android:text=""
       android:textAlignment="center"
       android:textColor="#B17010"
       android:textSize="18sp"
       android:textStyle="bold"
       android:visibility="invisible" />


   <TextView
       android:id="@+id/titleTemperatura"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="25dp"
       android:gravity="center_horizontal"
       android:text="Temperatura"
       android:textAlignment="center"
       android:textColor="#000000"
       android:textSize="30sp"
       android:textStyle="bold"
       android:visibility="invisible" />

   <TextView
       android:id="@+id/txtTemperatura"
       android:layout_width="379dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       android:gravity="center_horizontal"
       android:text=""
       android:textAlignment="center"
       android:textColor="#000000"
       android:textSize="30sp"
       android:textStyle="bold"
       android:visibility="invisible" />

   <TextView
       android:id="@+id/txtDescripcion"
       android:layout_width="379dp"
       android:layout_height="wrap_content"
       android:layout_marginTop="25dp"
       android:gravity="center_horizontal"
       android:textAlignment="center"
       android:textColor="#494949"
       android:textSize="18sp"
       android:textStyle="bold|italic"
       android:visibility="invisible" />
</com.google.android.material.circularreveal.CircularRevealLinearLayout>